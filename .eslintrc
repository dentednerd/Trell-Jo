{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "mocha": true,
        "browser": true,
        "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": [
        "jsx", "react"
    ],
    "rules": {
        "jsx/uses-factory": [1, {"pragma": "JSX"}],
        "jsx/mark-used-vars": 1,
        "jsx/no-undef": 1,
        "react/prop-types": 1,
        "no-console": 0,
        "space-before-blocks": 1,
        "arrow-spacing": 1,
        "keyword-spacing": 1,
        "space-infix-ops": 1,
        "space-in-parens": 1,
        "spaced-comment": 1,
        "space-before-function-paren": 0,
        "semi": 1,
        "quotes": ["error", "single"],
        "object-curly-spacing": 1,
        "no-multiple-empty-lines": 1
    }
}